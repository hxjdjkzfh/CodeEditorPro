<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".EditorActivity">

    <!-- Tabs area -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tabs_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/tabBackground"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/tab_item" />

    <!-- Code editor area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <io.github.rosemoe.sora.widget.CodeEditor
            android:id="@+id/code_editor"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Drawer container - position will be set programmatically -->
        <LinearLayout
            android:id="@+id/drawer_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <!-- Drawer handle -->
            <View
                android:id="@+id/drawer_handle"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/drawer_handle" />

            <!-- Drawer layout -->
            <LinearLayout
                android:id="@+id/drawer_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorSurface"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageButton
                    android:id="@+id/open_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/open_file"
                    android:src="@android:drawable/ic_menu_upload"
                    android:tint="@color/colorAccent" />

                <ImageButton
                    android:id="@+id/save_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/save_file"
                    android:src="@android:drawable/ic_menu_save"
                    android:tint="@color/colorAccent" />

                <ImageButton
                    android:id="@+id/save_as_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/save_as"
                    android:src="@android:drawable/ic_menu_save"
                    android:tint="@color/colorAccent" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/settings_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/settings"
                    android:src="@android:drawable/ic_menu_preferences"
                    android:tint="@color/colorAccent" />

                <ImageButton
                    android:id="@+id/about_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/about"
                    android:src="@android:drawable/ic_menu_info_details"
                    android:tint="@color/colorAccent" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>